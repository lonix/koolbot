{
  "name": "koolbot",
  "version": "1.0.0",
  "type": "module",
  "description": "A Discord bot with various features including PLEX price checking and role-based commands",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --listFiles --listEmittedFiles",
    "start": "node dist/index.js",
    "dev": "node --loader ./src/loader.mjs src/index.ts",
    "watch": "tsc -w",
    "deploy-commands": "node --import ./src/loader.js src/deploy-commands.ts",
    "unregister-guild-commands": "node --import ./src/loader.js src/unregister-guild-commands.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@discordjs/builders": "^1.10.1",
    "axios": "^1.6.7",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.1",
    "mongoose": "^8.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", { "useESM": true }]
    }
  }
}
