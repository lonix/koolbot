{
  "name": "koolbot",
  "version": "0.5.0",
  "type": "module",
  "description": "A Discord bot with various features including PLEX price checking and role-based commands",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --listFiles --listEmittedFiles",
    "start": "node dist/index.js",
    "dev": "node --loader ./src/loader.mjs src/index.ts",
    "watch": "tsc --watch",
    "unregister-guild-commands": "node --import ./src/loader.js src/unregister-guild-commands.ts",
    "cleanup-global-commands": "node --import ./src/loader.js src/scripts/cleanup-global-commands.ts",
    "migrate-config": "node --import ./src/loader.js src/scripts/migrate-config.ts",
    "validate-config": "node --import ./src/loader.js src/scripts/validate-config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "npm run build && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@discordjs/builders": "^1.11.3",
    "@types/cron": "^2.4.3",
    "axios": "^1.12.0",
    "cron": "^4.3.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "mongoose": "^8.18.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
