{
  "name": "koolbot",
  "version": "1.0.0",
  "description": "A Discord bot with various features including PLEX price checking and role-based commands",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "deploy-commands": "ts-node src/deploy-commands.ts",
    "unregister-guild-commands": "ts-node src/unregister-guild-commands.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.1",
    "mongoose": "^8.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
